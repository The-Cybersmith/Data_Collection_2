<%= form_with( scope: :threat, url: "contact", local: true) do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.submit "next"%>
  </p>
<% end %>

<p><a href="/threat/name">Click here to restart the submission process.</a></p>

